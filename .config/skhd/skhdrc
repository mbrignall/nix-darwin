alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

alt - s : yabai -m display --focus west
alt - g : yabai -m display --focus east

# rotate layout
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle window float
shift + alt - m : yabai -m window --toggle float --grid zoom-fullscreen

# Balance out the tree of windows on the screen
shift + alt - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai - window --swap south
shift + alt - k : yabai - window --swap north
shift + alt - h : yabai - window --swap west
shift + alt - l : yabai - window --swap east

# move windows and split
ctrl + alt - J : yabai - window --warp south
ctrl + alt - k : yabai - window --warp north
ctrl + alt - h : yabai - window --warp west
ctrl + alt - l : yabai - window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;


# Opens Alacritty
cmd - return : open -a alacritty

# Lock screen
cmd - escape : osascript -e 'tell application "System Events" to keystroke "q" using {command down, control down}'

ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai




